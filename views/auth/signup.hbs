  <div class="container">
    <h1>Singup</h1>
    <form action="/auth/signup" method="POST">
      <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Username</label>
          <input type="tex" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" placeholder="Your username">
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="Your email">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Your password">
          <div id="passwordHelpBlock" class="form-text">
            Your password must be 8 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
          </div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Confirm password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="confirmpassword" placeholder="Confirm password">
        </div>
        <div class="mb-3">
          <label for="exampleInputSelect" class="form-label">Profile</label>
          <select class="form-select" aria-label="Default select example" name="profile">
            <option selected>Open this select menu</option>
            <option value="Patient">Patient</option>
            <option value="Trainer">Trainer</option>
          </select>
        </div>
          <button type="submit" class="btn btn-info">Singup</button>
          
          {{#if errorMessage}}
            <p class="text-danger">{{errorMessage}}</p>
          
          {{/if}}
      </form>
  </div>


 